<div class="container">
  <h2>Categories</h2>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Category ID</th>
          <th>Category Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
        <tr>
          <td><a href="/items?category={{id}}">{{id}}</a></td>
          <td><a href="/items?category={{id}}">{{category}}</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#unless categories}}
  <div class="text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless}}
</div>
