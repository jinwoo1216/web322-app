<h2>Categories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#if categories}}
        {{#each categories}}
        <tr>
            <td>{{category}}</td>
            <td>
                <a href="/categories/delete/{{id}}" class="btn btn-danger">Remove</a>
            </td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td colspan="2">No categories available.</td>
        </tr>
        {{/if}}
    </tbody>
</table>

<a href="/categories/add" class="btn btn-primary">Add Category</a>
