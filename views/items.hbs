<div class="container">
  <h2>Items</h2>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Item ID</th>
          <th>Title</th>
          <th>Post Date</th>
          <th>Price</th>
          <th>Category</th>
          <th>Published</th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{postDate}}</td>
          <td>{{price}}</td>
          <td><a href="/items?category={{category}}">{{category}}</a></td>
          <td>{{#if published}}Yes{{else}}No{{/if}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#unless items}}
  <div class="text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless}}
</div>
