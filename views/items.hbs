<h2>Items</h2>

{{#if items}}
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Published</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td>{{title}}</td>
            <td>{{category}}</td>
            <td>{{#if published}}Yes{{else}}No{{/if}}</td>
            <td>${{price}}</td>
            <td>
                <a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>No items available.</p>
{{/if}}

<a href="/items/add" class="btn btn-primary">Add Item</a>
