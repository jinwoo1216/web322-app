<h2>Add Item</h2>

<form action="/items/add" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" required autofocus>
    </div>
    <div class="mb-3">
        <label for="body">Body:</label>
        <textarea id="body" name="body" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
        <label for="category">Category:</label>
        {{#if categories}}
        <select id="category" name="category" class="form-control" required>
            {{#each categories}}
            <option value="{{id}}">{{category}}</option>
            {{/each}}
        </select>
        {{else}}
        <p>No categories available. Please add a category to add an item under a category.</p>
        {{/if}}
    </div>
    <div class="mb-3">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" class="form-control" step="0.01" required>
    </div>
    <div class="mb-3">
        <label for="featureImage">Feature Image:</label>
        <input type="file" id="featureImage" name="featureImage" class="form-control">
    </div>
    <div class="mb-3">
        <input type="checkbox" id="published" name="published" class="form-check-input">
        <label for="published" class="form-check-label">Published</label>
    </div>
    <button type="submit" class="btn btn-success">Add Item</button>
</form>
