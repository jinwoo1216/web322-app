<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-8 col-10">
      {{#if successMessage}}
      <div class="alert alert-success text-center">
        <strong>Success:</strong> {{successMessage}}
      </div>
      <a class="btn btn-success btn-block" href="/login">Proceed to Log in</a>
      {{else}}
      {{#if errorMessage}}
      <div class="alert alert-danger text-center">
        <strong>Error:</strong> {{errorMessage}}
      </div>
      {{/if}}
      <form method="POST" action="/register" class="p-4 bg-light border rounded">
        <div class="form-group mb-4">
          <label for="userName">User Name</label>
          <input type="text" class="form-control" id="userName" name="userName" placeholder="User Name" required value="{{userName}}">
        </div>
        <div class="form-group mb-4">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
        </div>
        <div class="form-group mb-4">
          <label for="password2">Confirm Password</label>
          <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm Password" required>
        </div>
        <div class="form-group mb-4">
          <label for="email">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
        </div>
        <button type="submit" class="btn btn-success btn-block mt-3">Register</button>
      </form>
      {{/if}}
    </div>
  </div>
</div>
